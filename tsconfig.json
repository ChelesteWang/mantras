{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs", 
    // "rootDir": "./src", // Removed rootDir to allow compilation of files outside src
    "outDir": "./dist", 
    "rootDirs": ["src", "config/agents/tools"], // Added rootDirs to handle multiple source locations
    "esModuleInterop": true,
    "resolveJsonModule": true, 
    "forceConsistentCasingInFileNames": true, 
    "strict": true, 
    "skipLibCheck": true, 
    "declaration": true
  },
  "include": ["src/**/*", "config/agents/tools/**/*.ts"], // Keep this as is, rootDirs will handle the structure
  "exclude": ["node_modules", "**/*.spec.ts", "docs", "config/agents/**/*.yaml"]
}