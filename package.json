{
  "name": "mantras",
  "version": "2.0.0",
  "description": "企业级 MCP 服务器：AI 资产管理、Persona 召唤和提示工程增强功能。包含17个已验证资产、专业CLI工具和完整的质量控制系统。",
  "main": "dist/server.js",
  "bin": {
    "mantras": "bin/mantras.js"
  },
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "start": "node dist/server.js",
    "test": "jest",
    "build": "tsup",
    "dev": "tsx watch src/server.ts",
    "assets:list": "node bin/mantras-cli.js list",
    "assets:validate": "node bin/mantras-cli.js validate",
    "assets:stats": "node bin/mantras-cli.js stats",
    "assets:backup": "node bin/mantras-cli.js backup ./backups",
    "assets:sync": "node bin/sync-assets.js",
    "prompt:center": "open tools/management-center.html",
    "prompt:editor": "open tools/prompt-editor.html",
    "prompt:create": "node bin/create-prompt-wizard.js",
    "prompt:manage": "node bin/unified-prompt-manager.js",
    "prompt:analyze": "node bin/smart-assistant.js analyze",
    "prompt:quality": "node bin/smart-assistant.js quality"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.1",
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.4",
    "ts-jest": "^29.4.0",
    "tsup": "^8.5.0",
    "tsx": "^4.19.2"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "format": [
      "esm"
    ],
    "outDir": "dist",
    "clean": true
  }
}
