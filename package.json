{
  "name": "mantras",
  "version": "2.0.0",
  "description": "Enhanced MCP server with Persona Summoner capabilities - dynamic persona management and intent-based personality selection",
  "main": "dist/server.js",
  "bin": {
    "mantras": "dist/server.js"
  },
  "type": "module",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
