{
  "name": "mantras-next",
  "version": "0.1.0",
  "description": "一个模块化、可扩展的AI智能体框架，特别适用于IDE集成场景",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r dev",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "clean": "pnpm -r clean && rimraf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "keywords": [
    "ai",
    "agent",
    "ide",
    "mantras",
    "llm",
    "framework"
  ],
  "author": "Mantras Team",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.17.57",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@8.10.0"
}